extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Registar uma conta
    
    .w3-container  
      form.w3-container(action="/register" method="POST")
        fieldset 
          legend Infos:

          label Nome 
          input.w3-input(type="text" name="name" required)

          label Username 
          input.w3-input(type="text" name="username" required)
            
          label Password 
          input.w3-input(type="password" name="password" required)

        fieldset 
          legend Nível:
          input(type='radio' name='level' value='admin')
          |  Administrador
          br
          input(type='radio' name='level' value='producer')
          |  Produtor
          br
          input(type='radio' name='level' value='consumer')
          |  Consumidor

        .button-container
          input.w3-btn.w3-blue.w3-margin(type="submit" value="Registar")
          a.w3-btn.w3-red.w3-margin(href="/login") Voltar atrás

    if erro != undefined
      .w3-panel.w3-yellow
        h3 Erro
        p= erro      

    footer.w3-container.w3-blue
      address Generated in EngWeb24 at #{d}
