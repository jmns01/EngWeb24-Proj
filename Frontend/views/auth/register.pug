extends ../includes/layout

block content
  .w3-card-4
    .w3-container
      h1 Criar nova conta

    .w3-container
      form.w3-container(action="/auth/register" method="POST")
        fieldset 
          legend Infos:

          label Nome 
          input.w3-input(type="text" name="name" required)

          label Username 
          input.w3-input(type="text" name="username" required)
            
          label Password 
          input.w3-input(type="password" name="password" required)

        fieldset 
          legend Nível:
          input(type='radio' name='level' value='producer')
          |  Produtor
          br
          input(type='radio' name='level' value='consumer')
          |  Consumidor

        .button-container
          input.w3-btn.w3-blue.w3-margin(type="submit" value="Criar nova conta")
          a.w3-btn.w3-red.w3-margin(href="/auth/login") Iniciar sessão

    if erro != undefined
      .w3-panel.w3-yellow
        h3 Erro
        p= erro