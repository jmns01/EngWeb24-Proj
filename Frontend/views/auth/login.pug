extends ../includes/layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      .w3-bar.w3-border-bottom
          .w3-bar-item
              h2 #[b Iniciar sessão]
          a.w3-bar-item.w3-button(href="/" style="position:relative; top:10px;")
            .w3-cell-row
                .w3-cell
                    i.fa.fa-home(style="color: #000000;")
                .w3-cell(style="width:80%")
                    h6 #[b Início]
    .w3-container  
      form.w3-container(action="/auth/login" method="POST")
        fieldset 
          legend Credenciais:
          label(for="username") Username
          input.w3-input(type="text" name="username" required)
          
          label(for="password") Password
          input.w3-input(type="password" name="password" required)

        .button-container
          input.w3-btn.w3-blue.w3-margin(type="submit" value="Iniciar sessão")
          a.w3-btn.w3-teal.w3-margin(href="/auth/register") Criar uma conta

    if error != undefined
      .w3-panel.w3-yellow
        h3 Erro no login!
        p= error